{
  "extends": "../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "app",
      "kebab-case"
    ],
    "no-inferrable-types": [
      false,
      "ignore-params"
    ],
    "no-trailing-whitespace": false,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type",
      "check-typecast"
    ],
    "import-destructuring-spacing": true,
    "import-spacing": true,
    "property-declaration": "nospace",
  }
}
